{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"importHelpers": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"allowJs": true,
		"baseUrl": ".",
		"lib": [
			"es2022",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"vueCompilerOptions": {
		"narrowingTypesInInlineHandlers": true
	}
}